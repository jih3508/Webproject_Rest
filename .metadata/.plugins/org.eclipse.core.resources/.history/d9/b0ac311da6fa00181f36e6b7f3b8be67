<script>


$(function(){
	$("#btnsubmit").click(function(){
		if($("#id").val() == "") {
			alert("id을 입력해주세요.");
			$("#title").focus();
			return;
		}
		if($("#pwd").val() == "") {
			alert("암호를 입력해주세요.");
			$("#pwd").focus();
			return;
			
		}
		else{
			if($("#pwd").length <= 6 ) {
			alert("암호 6자 이상 입력해주세요");
			$("#pwd").focus();
			return;
			}
			if($("#pwd").val() != $("#pwd_comfirm").val()){
				alert("암호가 일치하지 않습니다.");
				$("#pwd").focus();
				$("#pwd_comfirm").focus();
				return;
			}
		}
		if($("#name").val() == "") {
			alert("이름을 입력해주세요.");
			$("#name").focus();
			return;
		}
		if(confirm("저장하시겠습니까?")) {		
	 		var formData = $("#member").serialize();
	 		var srt= $("#email").val()+ "@" + $("#domain_site").val();
	 		$("#email").val(srt);  
			$.ajax({
				type: "POST",
				data: formData,
				url: "/memberSave.do",
				dataType: "json",
				
				success: function(data) {
					if(data.result == "ok") {
						alert("저장하였습니다.");
						location.href = "/memberSign.do";
					} else {
						alert("저장 실패했습니다. 다시 시도해 주세요.");
					}
				},
				error: function () {
					alert("오류발생 ");
				}
			}); 
		}
	});
});

</script>

